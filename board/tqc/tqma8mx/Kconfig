if TARGET_TQMA8MX

config SYS_BOARD
	default "tqma8mx"

config SYS_VENDOR
	default "tqc"

config SYS_CONFIG_NAME
	default "tqma8mx"

choice
	prompt "TQMa8MX Memory variant"
	default TQMA8MX_2G_SAMSUNG
	help
	  Select cpu variant for TQMa8MX

config TQMA8MX_2G_SAMSUNG
	bool "TQMa8MX with 2GB LPDDR4 Samsung"
	help
	  Select module with 2GB LPDDR4 Samsung"

config TQMA8MX_2G_MICRON
	bool "TQMa8MX with 2GB LPDDR4 Micron"
	help
	  Select module with 2GB LPDDR4 Micron"

config TQMA8MX_1G
	bool "TQMa8MX with 1GB LPDDR4"
	help
	  Select module with 1GB LPDDR4"

endchoice

choice
	prompt "TQMa8MX base board variant"
	default MBA8MX
	help
	  Select base board for TQMa8MX

config MBA8MX
	bool "TQMa8MX on MBa8MX Starterkit"
	select TQC_SDMMC
	select MII
	select CMD_MII
	select CMD_PING
	select CMD_DHCP
	select CMD_NET
	select DM_ETH
	select FEC_MXC
	select PHYLIB
	select PHY_TI
	select CMD_MMC
	select CMD_SF
	select CMD_FAT
	select CMD_EXT2
	select CMD_EXT4
	select CMD_EXT4_WRITE
	select CONFIG_DOS_PARTITION
	select CFB_CONSOLE
	help
	  Select the MBa8MX starterkit. This features a GigE Phy, USB, SD-Card
	  etc.

endchoice

choice
	prompt "TQMa8MX boot device"
	default TQMBA8MX_SDCARD
	help
	  Select boot device for TQMa8MX

config TQMBA8MX_SDCARD
	bool "TQMa8MX from SD / e-MMC"
	select SD_BOOT
	select ENV_IS_IN_MMC
	help
	  Select booting from SD / e-MMC

endchoice

source "board/tqc/common/Kconfig"

endif
